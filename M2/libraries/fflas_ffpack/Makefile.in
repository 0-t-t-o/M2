# disable test because include file <omp.h> is not found under clang
CHECKTARGET = .

TARDIR = fflas-ffpack-$(VERSION)
TARFILE = fflas-ffpack-$(VERSION).tar.gz

LICENSEFILES = COPYING
PRECONFIGURE = NOCONFIGURE=yes 
