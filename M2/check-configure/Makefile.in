VPATH = @srcdir@
LDFLAGS = -L$(BUILTLIBPATH)/lib
CPPFLAGS =  -I$(BUILTLIBPATH)/include
include ../include/config.Makefile
check: clean-and-config
clean:; rm -f config.status config.log config.args
clean-and-config: check-config
check-config:
	@ echo "make: *** [check-config] remark: the test is important (only) for testing whether the configure script detects pre-installed libraries properly" >&2
	@top_srcdir@/configure \
	    LDFLAGS="$(LDFLAGS)" \
	    CPPFLAGS="$(CPPFLAGS)" \
	    CC="$(CC)" \
	    CXX="$(CXX)" \
	    CFLAGS="$(CFLAGS)" \
	    CXXFLAGS="$(CXXFLAGS)" \
	    --build="@build_alias@" \
	    --disable-building
	$(MAKE) -f Makefile clean
distclean:: clean; rm -f Makefile
Makefile: Makefile.in ; cd .. && ./config.status check-configure/Makefile
