VERSION = 2.4
LICENSEFILES = flint.h gpl-2.0.txt
ifeq (@DEBUG@,yes)
CFLAGS += -O0 -fno-unroll-loops 
endif
CONFIGURECMD = ./configure --with-gc --disable-tls --prefix='$(PREFIX)' --disable-shared CC='$(CC)' CFLAGS='$(CPPFLAGS) $(CFLAGS)'
include ../Makefile.library
Makefile: @srcdir@/Makefile.in ; cd ../.. && ./config.status libraries/flint/Makefile
